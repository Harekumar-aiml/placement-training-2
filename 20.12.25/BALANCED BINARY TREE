/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean isBalanced(TreeNode root) {
        if(root==null)
        {
            return true;
        }

        int h = height(root);

        return h!=-1?true:false;
        
    }

    int height(TreeNode root)
    {
        if(root==null)
        {
            return 0;
        }


        int leftH = height(root.left);
        int rightH = height(root.right);

        int hDiff = Math.abs(leftH - rightH);
        int height = 0;
        if(hDiff>1  || leftH==-1 || rightH==-1)
        {
            height = -1;
        }
        else if(leftH!=-1 && rightH!=-1)
        {
            height = Math.max(leftH, rightH) + 1;

        }

        return height;
    }
}

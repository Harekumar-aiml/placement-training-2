/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void tleft(TreeNode root, ArrayList<Integer> l){
        if(root==null) {
            l.add(-1);
            return;
        };
        l.add(root.val);
        tleft(root.left,l);
        tleft(root.right,l);
    }
    public void tright(TreeNode root, ArrayList<Integer> r){
        if(root==null) {
            r.add(-1);
            return;
        };
        r.add(root.val);
        tright(root.right,r);
        tright(root.left,r);
    }
    public boolean isSymmetric(TreeNode root) {
        ArrayList<Integer> l  = new ArrayList<>();
        ArrayList<Integer> r = new ArrayList<>();
        if(root==null) return true;
        if(root.left==null && root.right==null) return true;
        tleft(root.left,l);
        tright(root.right,r);

        if(l.size()!=r.size()) return false;
        for(int i=0;i<l.size();i++){
            if(l.get(i)!=r.get(i)) return false;
        }
        return true;

    }
}

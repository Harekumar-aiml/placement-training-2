class Solution(object):
    def champagneTower(self, poured, query_row, query_glass):
        dp = [[0] * (i + 1) for i in range(query_row + 1)]
        dp[0][0] = poured

        for i in range(query_row):
            for j in range(i + 1):
                excess = max(0, (dp[i][j] - 1) / 2.0)
                if i + 1 <= query_row:
                    dp[i + 1][j] += excess
                    dp[i + 1][j + 1] += excess

        return min(1, dp[query_row][query_glass])
